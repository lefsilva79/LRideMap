<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Marker Colors Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marker Colors"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Origin Marker Color"
        android:textSize="14sp"/>

    <SeekBar
        android:id="@+id/originColorSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:max="360"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Marker Color"
        android:textSize="14sp"/>

    <SeekBar
        android:id="@+id/destinationColorSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:max="360"/>

    <!-- Line Thickness Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Line Thickness"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <SeekBar
        android:id="@+id/lineThicknessSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:max="15"
        android:progress="5"/>

    <!-- Map Size Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map Size"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map Width"
        android:textSize="14sp"/>

    <SeekBar
        android:id="@+id/mapWidthSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:max="500"
        android:progress="250"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map Height"
        android:textSize="14sp"/>

    <SeekBar
        android:id="@+id/mapHeightSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:max="500"
        android:progress="250"/>

    <!-- Map Zoom Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map Zoom"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <SeekBar
        android:id="@+id/mapZoomSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="16"
        android:progress="8"/>

</LinearLayout>